.field-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  height: 100rpx;
  box-sizing: border-box;
  border-top: 1px solid #e6e6e6;
}
.hide-border {
  border-top: unset;
}
.field-label {
  width: 250rpx;
  font-size: 30rpx;
  color: #646464;
}
.field-value-content {
  display: flex;
  align-items: center;
}
.field-value {
  font-size: 30rpx;
  color: #323232;
}
.field-placeholder {
  font-size: 30rpx;
  color: #c4c4c4;
}
.right-icon {
  height: 32rpx;
  width: 32rpx;
  color: #c8c8c8;
  margin-left: 20rpx;
}
