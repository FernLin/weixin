.field-list {
  margin-top: 20rpx;
  padding: 0 30rpx;
  background-color: #fff;
}
.date-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.date-content view {
  width: 246rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  background-color: #f7f7f7;
  border-radius: 28rpx;
  font-size: 24rpx;
}
.split-line {
  color: #646464;
  font-size: 30rpx;
  margin: 0 8rpx;
}
.content-color {
  color: #323232;
}
.placeholder-color {
  color: #c4c4c4;
}
.search {
  margin: 48rpx 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border: 1rpx solid #e43234;
  border-radius: 45rpx;
  font-size: 32rpx;
  color: #e43234;
}
.list-content {
  padding: 0 30rpx;
  height: calc(100vh - 404rpx);
  overflow-y: scroll;
}
.list-content > view:last-child {
  margin-bottom: unset;
}
.empty-content {
  margin-top: 180rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.empty-content image {
  width: 320rpx;
  height: 230rpx;
}
.empty-content view {
  margin-top: 30rpx;
  color: #666666;
  font-weight: 400;
}
.l-t {
  font-family: PingFang SC;
  color: #646464;
  font-size: 30rpx;
}

.tran-card {
  border-radius: 12rpx;
}

.money-num {
  font-family: PingFang SC;
  font-weight: 600;
  color: #333333;
  font-size: 36rpx;
  line-height: 50rpx;
}

.tran-date {
  margin-top: 4rpx;
  font-family: PingFang SC;
  color: #969696;
  font-size: 26rpx;
  line-height: 37rpx;
}

.bank-name {
  font-family: PingFang SC;
  color: #333333;
  font-size: 30rpx;
  line-height: 42rpx;
  width: 260rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bank-card {
  font-family: PingFang SC;
  color: #969696;
  font-size: 26rpx;
  line-height: 37rpx;
}

.direct-icon {
  height: 16rpx;
  width: 80rpx;
}

.tran-l {
  color: #646464;
  font-size: 26rpx;
  line-height: 37rpx;
}

.tran-r {
  color: #323232;
  font-size: 26rpx;
  line-height: 37rpx;
  text-align: right;
}

.mt-16 {
  margin-top: 16rpx;
}

.mb-30 {
  margin-bottom: 30rpx;
}

.w-70 {
  width: 70%;
  justify-content: flex-end;
}
.fen-ge {
  height: 1rpx;
  border-bottom: 1rpx solid #e6e6e6;
  margin: 0 30rpx;
}

.text-red {
  color: #e43234;
}
