  text-align: center;
}

.mess-input {
  width: 240rpx;
}

.next-step {
  margin: 64rpx 30rpx;
  height: 90rpx;
  background-color: #e43234;
  border-radius: 45rpx;

  font-family: PingFang SC;
  font-weight: 600;
