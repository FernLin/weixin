  font-size: 30rpx;
  color: #3378f6;
  text-align: center;
}
.popup-content {
  width: 690rpx;
  border-radius: 12rpx;
  top: 40%;
}
.result-content {
  padding: 30rpx 0 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.main-block {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 60rpx;
}
.success-word {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  margin: 34rpx 0 30rpx;
}
.notice-word {
  font-size: 28rpx;
  color: #646464;
  margin-bottom: 48rpx;
}
.notice-word > text {
  color: #4d91eb;
}
.success-img {
  width: 118rpx;
  height: 118rpx;
}
.back-btn {
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
  border-top: 1rpx solid #e6e6e6;
  color: #e43234;
  font-size: 32rpx;
}
