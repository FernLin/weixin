        <view class="unbind-popup m-30 posi-re" >
            <van-icon name="close" class="posi-ab closeBtn" bindtap="closePopup" />
            <view >短信已发送：{{phoneNum}}</view>
            <input value="{{messagePass}}" bindinput="bindPassword" maxlength="6" placeholder="请输入短信验证码" type="text" disabled="{{inputDis}}"/>
        </view>
    </van-popup> -->
</view>
<view class="next-step" bindtap="goNext">下一步</view>