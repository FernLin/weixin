.bank-card {
  margin: 30rpx 30rpx 0;
  background-color: #ffffff;
  border-radius: 12rpx;
  height: 310rpx;
}

.info {
  padding: 30rpx 0 0 30rpx;
  color: #323232;
  height: 188rpx;
  display: flex;
}

.info > image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 35rpx;
}

.bank-card-id {
  font-weight: 700;
  font-size: 32rpx;
  line-height: 44rpx;
  margin-bottom: 7rpx;
}

.card-type {
  font-weight: 500;
  font-size: 28rpx;
  line-height: 44rpx;
  margin-right: 50rpx;
}

.card-type-1 {
  font-size: 24rpx;
  line-height: 36rpx;
}

.card-balance {
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #323232;
  font-weight: 600;
}

.card-balance text:first-child {
  opacity: 0.8;
  font-size: 26rpx;
  font-weight: 400;
  margin-right: 16rpx;
}

.fen-ge {
  width: 1rpx;
  height: 19rpx;
  border-right: 1rpx solid;
  border-color: #323232;
  margin: 0 20rpx;
}

.de-acc {
  top: 0;
  right: 0;
}

.de-acc > image {
  width: 120rpx;
  height: 42rpx;
}

.de-acc-txt {
  font-weight: 500;
  color: #ffffff;
  font-size: 24rpx;
  line-height: 42rpx;
  top: 0;
  left: 13rpx;
}

.card-fun {
  width: 100%;
  bottom: 0;
  height: 95rpx;
  border-top: 1px solid;
  border-color: #e6e6e6;
}

.btn-css {
  width: 100%;
  height: 44rpx;
  color: #3378f6;
  font-size: 30rpx;
  line-height: 44rpx;
  text-align: center;
}

.shui-yin {
  width: 214rpx;
  height: 138rpx;
  top: -138rpx;
  right: 0;
}

.unbind-popup > view {
  padding-top: 60rpx;
  margin-bottom: 40rpx;
}

.unbind-popup > input {
  padding-bottom: 40rpx;
}

.van-popup-m .van-popup {
  width: 80%;
  border-radius: 20rpx;
  top: 30% !important;
}

.notice-setting {
  margin-top: 30rpx;
  background-color: #ffffff;
  padding: 0 30rpx;
}
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 0;
  border-top: 1rpx solid #e6e6e6;
}
.setting-item:first-child {
  padding: 20rpx 0;
  border-top: unset;
}
.item-label {
  font-size: 30rpx;
  color: #333333;
}
.right-icon {
  height: 32rpx;
  width: 32rpx;
  color: #c8c8c8;
  margin-right: 30rpx;
}
