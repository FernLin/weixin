.bank-card {
  margin: 30rpx 30rpx 0;
  background-color: #ffffff;
  border-radius: 12rpx;
}

.info {
  padding: 30rpx 0 0 30rpx;
  color: #323232;
  /* height: 188rpx; */
  display: flex;
}

.info > image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 35rpx;
}

.info-detail {
  margin-top: 20rpx;
  border-top: 1rpx solid #e6e6e6;
  padding: 40rpx 30rpx;
}

.bank-card-id {
  font-weight: 700;
  font-size: 32rpx;
  line-height: 44rpx;
  margin-bottom: 7rpx;
}

.card-type {
  font-size: 28rpx;
  color: #323232;
  font-weight: 500;
}
.card-type > text:first-child {
  margin-right: 50rpx;
}
.card-type > text:last-child {
  font-size: 26rpx;
  font-weight: 400;
}

.check-card {
  font-size: 28rpx;
  color: #3378f6;
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.check-card > image {
  margin-right: 10rpx;
  width: 24rpx;
  height: 24rpx;
}

.card-balance {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #333333;
  font-weight: 400;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.card-balance:first-child {
  margin-top: unset;
}

.card-balance text:first-child {
  color: #646464;
  min-width: 170rpx;
}

.ac-label {
  min-width: unset !important;
}
.ac-value {
  display: flex;
  align-items: center;
}

.fen-ge {
  width: 1rpx;
  height: 19rpx;
  border-right: 1rpx solid;
  border-color: #323232;
  margin: 0 20rpx;
}

.de-acc {
  top: 0;
  right: 0;
}

.de-acc > image {
  width: 120rpx;
  height: 42rpx;
}

.de-acc-txt {
  font-weight: 600;
  color: #ffffff;
  font-size: 24rpx;
  line-height: 42rpx;
  top: 0;
  left: 13rpx;
}

.card-fun {
  width: 100%;
  bottom: 0;
  height: 95rpx;
  border-top: 1rpx solid #e6e6e6;
}

.btn-css {
  width: 100%;
  height: 100rpx;
  color: #3378f6;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
  border-top: 1rpx solid #e6e6e6;
}

.unbind-popup > view {
  padding-top: 60rpx;
  margin-bottom: 40rpx;
}

.unbind-popup > input {
  padding-bottom: 40rpx;
}

.van-popup-m .van-popup {
  width: 80%;
  border-radius: 20rpx;
  top: 30% !important;
}

.notice-setting {
  margin-top: 30rpx;
  background-color: #ffffff;
  padding: 0 30rpx;
}
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 0;
  border-top: 1rpx solid #e6e6e6;
}
.setting-item:first-child {
  padding: 20rpx 0;
  border-top: unset;
}
.item-label {
  font-size: 30rpx;
  color: #333333;
}
.right-icon {
  height: 32rpx;
  width: 32rpx;
  color: #c8c8c8;
  margin-right: 30rpx;
}
.popup-content {
  width: 690rpx;
  border-radius: 12rpx;
  top: 40%;
}
.unbind-content {
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.title {
  font-size: 28rpx;
  color: #323232;
  font-weight: 500;
}
.message {
  font-size: 24rpx;
  color: #646464;
  margin-top: 56rpx;
}
.message text {
  color: #323232;
  font-weight: 600;
}
.notice-content {
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.notice-title {
  font-size: 30rpx;
  color: #333333;
}
.notice-text {
  margin-top: 40rpx;
  padding: 0 40rpx;
  font-size: 30rpx;
  color: #666666;
}
.btn-content {
  border-top: 1rpx solid #e6e6e6;
  margin-top: 48rpx;
  display: flex;
  width: 100%;
}
.btn-content > view {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #666666;
  height: 96rpx;
  line-height: 96rpx;
}
.btn-content > view:last-child {
  color: #f51616;
  border-left: 1rpx solid #e6e6e6;
}
.verify-content {
  width: 580rpx;
  height: 80rpx;
  background: #f7f7f7;
  border: 1rpx solid #e6e6e6;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin: 16rpx 0 30rpx;
}
.verify-input {
  font-size: 28rpx;
  color: #323232;
  font-weight: 500;
  flex: 1;
}
.placeholder {
  font-size: 28rpx;
  color: #c4c4c4;
}
.fen-ge {
  width: 1rpx;
  height: 50rpx;
  border-right: 1rpx solid #e6e6e6;
  margin: 0 20rpx;
}
.notice {
  font-size: 26rpx;
  color: #437edf;
  text-align: center;
  font-weight: 500;
  width: 190rpx;
}
.count-num {
  font-size: 26rpx;
  color: #646464;
  text-align: center;
  width: 190rpx;
}
.popup-btn {
  width: calc(100% - 60rpx);
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #e43234;
  border-radius: 45rpx;
  font-size: 32rpx;
  color: #ffffff;
  letter-spacing: -0.14rpx;
  font-weight: 500;
}
.right-icon-ac {
  height: 32rpx;
  width: 32rpx;
  color: #c8c8c8;
  margin-left: 10rpx;
}