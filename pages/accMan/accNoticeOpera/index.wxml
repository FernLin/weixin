<view class="bottom-safe card-content">
    <view class="flex input1 p-30 jc-sb">
        卡号
        <view class="ta-r w-70" bindtap="selectAccountNum">
            <text class="placehoder-color" wx:if="{{!accountNum}}">请选择账号</text>
            <text wx:else>{{accountNum}}</text>
            <van-icon name="arrow" class="id-card-icon" />
        </view>
    </view>
    <view class="flex input1 p-30 jc-sb">
        手机号
        <input type="number" bindinput="bindPhoneNum" maxlength="11" placeholder="请输入手机号" gesturetype="text" class="ta-r" />
    </view>
    <view class="flex input1 p-30 jc-sb">
        短信验证码
        <view class="flex ta-r">
            <input bindinput="BindVerifyCode" maxlength="6" placeholder="请输入验证码" type="text" class="ta-r mess-input" />
            <view class="mess-fen-ge"></view>
            <view wx:if="{{ countDownFlag }}" bindtap="getVercode" class="get-vercode">获取验证码</view>
            <view wx:else>{{ countDownNum }}秒后重新获取</view>
        </view>
    </view>
    <!-- 卡号 -->
    <van-popup show="{{showPopup}}" round position="bottom">
        <van-picker columns="{{columns}}" show-toolbar bind:cancel="onClose" bind:confirm="onConfirm"/>
    </van-popup>
</view>

<view class="next-step" bindtap="goNext">{{operaName}}</view>

<van-overlay show="{{ loading }}" class="loading">
  <van-loading type="spinner" color="#1989fa"  />
</van-overlay>