.bank-card {
    margin: 30rpx 30rpx 0;
    background-color:#ffffff;
    border-radius:12rpx;
    height:310rpx;
}

.info {
    padding: 30rpx 0 0 30rpx;
    color:#323232;
    height: 180rpx;
    display: flex;
}

.info>image{
    width:70rpx;
    height:70rpx;
    margin-right: 35rpx;
}

.bank-card-id {
    font-weight:700;
    font-size:32rpx;
    line-height:44rpx;
    margin-bottom: 7rpx;
}

.card-type {
    font-weight:600;
    font-size:28rpx;
    line-height:44rpx;
    margin-right: 50rpx;
}

.card-type-1 {
    font-size:24rpx;
    line-height:36rpx;
}

.fen-ge {
    width: 1rpx;
    height:19rpx;
    border-right:1rpx solid;
    border-color:#323232;
    margin: 0 20rpx;
}



.de-acc {
    top: 0;
    right: 0;
}

.de-acc>image {
    width: 120rpx;
    height: 42rpx;
}

.de-acc-txt {
    font-weight:600;
    color:#ffffff;
    font-size:24rpx;
    line-height:42rpx;
    top: 0;
    left: 13rpx;
}

.card-fun {
    width: 100%;
    bottom: 0;
    height: 95rpx;
    border-top:1px solid;
    border-color:#e6e6e6;
}

.fen-ge-btn {
    height:45rpx;
    border-right:1px solid;
    border-color:#e6e6e6;
}

.btn-css {
    width: 100%;
    height:44rpx;
    color:#3378f6;
    font-size:30rpx;
    line-height:44rpx;
    text-align:center;
}

.shui-yin {
    width:214rpx;
    height:138rpx;
    top: -138rpx;
    right: 0;
}

.add-card-btn {
    height:90rpx;
    border-radius:12rpx;
    color:#e43234;
    font-size:32rpx;
    line-height:90rpx;
    border: 1rpx solid #e43234;
    text-align: center;
}

.unbind-popup>view {
    padding-top: 60rpx;
    margin-bottom: 40rpx;
}

.unbind-popup>input {
    padding-bottom: 40rpx;
}

.closeBtn {
    right: 0;
}

.van-popup-m .van-popup {
    width: 80%;
    border-radius: 20rpx;
    top: 30% !important;
}