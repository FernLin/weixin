<wxs module="util" src="../../../utils/wxParse.wxs"></wxs>
<view>
  <view class="main-content">
    <image class="img-avatar" src="{{ avatarUrl }}" />
    <view class="word-name">{{name}}</view>
    <view class="account-content">
      <image class="img-logo" src="/assets/bankicon.png" />
      <view class="account-block">
        <view>赣州银行</view>
        <view>{{util.hiddenBankCard(account)}}</view>
      </view>
    </view>
  </view>
  <view class="input-block">
    <my-field label="短信验证码" useSlot hideBorder>
      <view class="verify-content">
        <input value="{{verifyCode}}" bindinput="bindPassword" maxlength="6" placeholder="请输入验证码" type="text" class="custom-input" placeholder-class="placehoder-color" />
        <view class="mess-fen-ge"></view>
        <view wx:if="{{ countDownFlag }}" bindtap="getVercode" class="get-vercode">获取验证码</view>
        <view wx:else class="count-down">{{ countDownNum }}秒后重发</view>
      </view>
    </my-field>
  </view>
  <view class="next-step-btn">确认动账通知</view>
</view>