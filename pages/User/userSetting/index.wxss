.content {
  margin-top: 20rpx;
  padding: 0 30rpx;
  background-color: #fff;
}
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 0;
}
.item-label {
  font-size: 30rpx;
  color: #333333;
}
.right-icon {
  height: 32rpx;
  width: 32rpx;
  color: #c8c8c8;
}
.popup-content {
  width: 690rpx;
  border-radius: 12rpx;
  top: 40%;
}
.unbind-content {
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.title {
  font-size: 28rpx;
  color: #323232;
  font-weight: 500;
}
.message {
  font-size: 24rpx;
  color: #646464;
  margin-top: 56rpx;
}
.message text {
  color: #323232;
  font-weight: 600;
}
.verify-content {
  width: 580rpx;
  height: 80rpx;
  background: #f7f7f7;
  border: 1rpx solid #e6e6e6;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin: 16rpx 0 30rpx;
}
.verify-input {
  font-size: 28rpx;
  color: #323232;
  font-weight: 500;
  flex: 1;
}
.placeholder {
  font-size: 28rpx;
  color: #c4c4c4;
}
.fen-ge {
  width: 1rpx;
  height: 50rpx;
  border-right: 1rpx solid #e6e6e6;
  margin: 0 20rpx;
}
.notice {
  font-size: 26rpx;
  color: #437edf;
  text-align: center;
  font-weight: 500;
  width: 170rpx;
}
.count-num {
  font-size: 26rpx;
  color: #646464;
  text-align: center;
  width: 170rpx;
}
.popup-btn {
  width: calc(100% - 60rpx);
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #e43234;
  border-radius: 45rpx;
  font-size: 32rpx;
  color: #ffffff;
  letter-spacing: -0.14rpx;
  font-weight: 500;
}
.result-content {
  padding: 48rpx 0 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.main-block {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.back-title {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}
.success-word {
  font-size: 30rpx;
  color: #666666;
  font-weight: 500;
  margin: 40rpx 0 48rpx;
}
.back-btn {
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
  border-top: 1rpx solid #e6e6e6;
  color: #e43234;
  font-size: 32rpx;
}
