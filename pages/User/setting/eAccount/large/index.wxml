        <view class="topInViewChild1 flex-c flex-center">
          <view class="imageBox flex-center">
            <image class="image" mode="scaleToFill" src="/assets/user/headImage.png"></image>
          </view>
          <view class="bank flex-center">中国农业银行(7890)</view>
          <view class="card">**三的储蓄卡</view>
