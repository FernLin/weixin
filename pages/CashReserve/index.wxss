.search-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}
.my-tab {
  overflow: hidden !important;
}
.search-field {
  padding: 20rpx 0 !important;
  width: 500rpx;
}

.current-city {
  font-size: 30rpx;
  color: #333333;
}

.icon-arrow {
  height: 32rpx;
  width: 32rpx;
  color: #c8c8c8;
  margin-left: 10rpx;
}

.bank-list {
  height: calc(100vh - 216rpx);
}

.bank-item {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 30rpx;
}

.bank-name {
  display: flex;
  align-items: center;
}
.bank-name .dept-name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
  margin-right: 30rpx;
}
.bank-name .recent-status {
  font-size: 22rpx;
  color: #e43234;
  background-color: #fff2f2;
  border-radius: 8rpx;
  padding: 8rpx 12rpx;
}
.bank-distance {
  display: flex;
  align-items: center;
}

.bank-distance text {
  font-size: 26rpx;
  color: #333333;
  margin-right: 14rpx;
}

.bank-distance image {
  width: 30rpx;
  height: 34rpx;
}

.bank-address {
  font-size: 26rpx;
  color: #666666;
  margin-top: 28rpx;
}

.btn-content {
  margin-top: 34rpx;
  border-top: 1rpx solid #e6e6e6;
  padding-top: 20rpx;
  display: flex;
}

.btn-content .opera {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333333;
  padding: 6rpx 0;
}

.btn-content .opera image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 14rpx;
}

.line {
  height: 50rpx;
  border-left: 1rpx solid #e6e6e6;
}

.record-list {
  padding: 0 30rpx;
}
.record-item {
  margin-top: 20rpx;
  padding: 24rpx 30rpx 0;
  background-color: #fff;
  border-radius: 12rpx;
}
.record-status {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.record-status text:first-child {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
}
.record-status text:last-child {
  font-size: 28rpx;
  color: #333333;
}
.record-bank-name {
  margin-top: 24rpx;
  font-size: 30rpx;
  color: #333333;
}
.record-customer-msg {
  margin: 8rpx 0 24rpx;
  font-size: 30rpx;
  color: #333333;
}
.record-customer-msg text:first-child {
  padding-right: 40rpx;
  margin-right: 40rpx;
  border-right: 1rpx solid #333;
}
.record-msg {
  margin-bottom: 10rpx;
  display: flex;
}
.record-msg text:first-child {
  font-size: 26rpx;
  color: #666666;
  display: inline-block;
  width: 184rpx;
}
.record-msg text:last-child {
  font-size: 26rpx;
  color: #333333;
  width: 446rpx;
}
.record-amount {
  color: #e43234 !important;
}
.record-cancel {
  margin-top: 14rpx;
  font-size: 30rpx;
  color: #397cf6;
  font-weight: 600;
  border-top: 1rpx solid #e6e6e6;
  padding: 24rpx;
  text-align: center;
}
.empty-content {
  margin-top: 180rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.empty-content image {
  width: 320rpx;
  height: 230rpx;
}
.empty-content view {
  margin-top: 30rpx;
  color: #666666;
  font-weight: 400;
}
