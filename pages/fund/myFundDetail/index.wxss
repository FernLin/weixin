.detail_view {
  position: relative;
  padding-bottom: 200rpx;
}
.detail_view .info {
  background-color: #fff;
  margin: 20rpx 0;
}
.detail_view .info .fund_name {
  padding: 30rpx 60rpx;
  display: flex;
  justify-content: space-between;
}
.detail_view .info .fund_name .name {
  color: #333333;
  font-weight: 500;
  font-size: 32rpx;
}
.detail_view .info .fund_name .desc {
  font-size: 28rpx;
  color: #017aff;
}
.detail_view .info .fund_info {
  padding: 30rpx;
  border-top: 1rpx solid #ededed;
  border-bottom: 1rpx solid #ededed;
}
.detail_view .info .fund_info .all_position {
  text-align: center;
  padding: 0 30rpx;
}
.detail_view .info .fund_info .all_position .num {
  color: #cd934a;
  font-size: 52rpx;
  font-weight: 500;
  margin-top: 10rpx;
}
.detail_view .info .fund_info .income {
  display: flex;
  margin-top: 35rpx;
}
.detail_view .info .fund_info .income .income_item {
  flex: 1;
  text-align: center;
}
.detail_view .info .fund_info .income .income_item .num {
  font-size: 40rpx;
  font-weight: bold;
}
.detail_view .info .fund_info .income .income_item .up {
  color: #c7161e;
}
.detail_view .info .fund_info2 {
  padding: 20rpx 0;
}
.detail_view .info .fund_info2 .item {
  margin: 10rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}
.detail_view .info .fund_info2 .item .left {
  color: #646464;
}
.detail_view .info .fund_info2 .item .right {
  color: #323232;
}
.detail_view .echarts {
  width: 100%;
  height: 522rpx;
  padding: 20 30rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.detail_view .echarts ec-canvas {
  width: 100%;
  height: 100%;
}
.detail_view .echarts .tips {
  margin-top: -50rpx;
  text-align: center;
}
.detail_view .btn_view {
  position: fixed;
  bottom: 0;
  height: 168rpx;
  background-color: #fff;
  padding: 15rpx 30rpx;
  display: flex;
  width: 100%;
  box-sizing: border-box;
}
.detail_view .btn_view .btn_item {
  height: 70rpx;
  flex: 1;
}
.detail_view .btn_view .btn_item .button {
  margin: auto;
  width: 157rpx;
  background-color: #fff;
  border: 1rpx solid #ccc;
  line-height: 70rpx;
  text-align: center;
  font-size: 32rpx;
  color: #323232;
  border-radius: 35rpx;
}
.detail_view .btn_view .btn_item .buy_btn {
  color: #fff;
  background-color: #E43234;
}
