.focus_list {
  padding: 0 30rpx;
}
.focus_list .m_a {
  width: 570rpx;
  height: 200rpx;
  margin-top: 20rpx;
}
.focus_list .m_a .m_v {
  height: 200rpx;
  width: 690rpx;
}
.focus_list .focus_item {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  transform: translateX(120rpx);
  margin-left: -120rpx;
}
.focus_list .focus_item .remove {
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  width: 160rpx;
  background-color: red;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  transform: translateX(120rpx);
}
.focus_list .focus_item .name {
  color: #333333;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
}
.focus_list .focus_item .fund_info {
  display: flex;
}
.focus_list .focus_item .fund_info .code_box {
  margin-right: 130rpx;
}
.focus_list .focus_item .fund_info .box {
  font-size: 36rpx;
  font-weight: 500;
}
.focus_list .focus_item .fund_info .box .code {
  color: #333333;
  margin-bottom: 10rpx;
}
.focus_list .focus_item .fund_info .box .worth {
  color: #c7161e;
  margin-bottom: 10rpx;
}
